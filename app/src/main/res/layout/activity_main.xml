<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.dqr.www.multitaskupload.MainActivity">

        <Button
            android:id="@+id/btn_see"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看进度"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启服务上传"/>

        <Button
            android:id="@+id/btn_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="。。。"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除数据库任务"/>

        <Button
            android:id="@+id/btn_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询数据库所有数据"/>

        <Button
            android:id="@+id/btn_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="选择本地所有图片开始上《上传》"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:gravity="bottom|center_horizontal"
                  android:text="上传成功数据记录"

                  android:textColor="@android:color/holo_red_light"/>
        <Button
            android:id="@+id/btn_add_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="批量插入单个数据"/>

        <Button
            android:id="@+id/btn_add_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="批量插入数据"/>

        <Button
            android:id="@+id/btn_add_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="查询所有数据"/>


    </LinearLayout>
</ScrollView>
